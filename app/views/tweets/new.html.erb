<%= form_for(@tweet) do |f| %>

<%= f.label :image %><br>
<%= f.file_field :image %>
<%= f.label :text %><br>
<%= f.text_area :text, placeholder: "コメントを入れるにゃ", :cols => 40, :rows => 7  %><br>

<% if @tweet.errors.any? %>
<%= @tweet.errors.messages[:image][0]%>
<% end %>
<br><%= f.submit "にゃん"%>
<% end %>
